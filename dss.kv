<RootWidget>:
	do_default_tab: False
	tab_width: self.size[0] / len(self.tab_list)

	TabbedPanelItem:
		id: tab_preprocess
		text: 'Preprocess'

		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				# pos: (0, self.y)
				Button:
					text: 'Internet'
				Button:
					text: 'Local File'
			BoxLayout:
				Label:
					text: 'File Dest.'
				TextInput:
					text: 'default'
				Button:
					text: 'Import'	
			BoxLayout:
				BoxLayout:
					orientation: 'vertical'
					ScrollView:
						Label:
							color: (0, 1, 1, .5)
							text: str('abracadabra ' * 1000)
							text_size: self.width, None
							size_hint_y: None
							height: self.texture_size[1]
					Button:
						text: 'Drop'
				ScrollView:
					Label:
						color: (0, 1, 1, .5)
						text: str('abracadabra ' * 1000)
						text_size: self.width, None
						size_hint_y: None
						height: self.texture_size[1]
	TabbedPanelItem:
		id: tab_predict
		text: 'Predict'

	TabbedPanelItem:
		id: tab_optimize
		text: 'Optimize'
