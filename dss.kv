<InternetPopup>:
	title: 'Choose File'
	size_hint: (None, None)
	size: (600, 100)
	GridLayout:
		spacing: (10, 0)
		padding: [5, 5, 5, 5]
		cols: 3
		Label:
		    size_hint_x: .2
			text: 'Paste file link:'
		TextInput:
			id: url
			size_hint: (.5, 1)
		Button:
			size_hint_x: .1
			text: 'Go'
			on_press: root.send_file_name(*args) 


<LocalFilePopup>:
	title: 'Choose File'
	size_hint: (None, None)
	size: (600, 600)
	BoxLayout:
		FileChooserIconView:
			on_selection: root.select(*args)
